<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/color_cursor_white"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/buy_local"
        android:layout_width="match_parent"
        android:background="@drawable/main_button"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:layout_centerHorizontal="true"
        app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/product_image"
                android:src="@drawable/shirt"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="120dp"
                android:layout_height="120dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_below="@+id/store_banner"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                app:civ_border_width="0dp"
                android:src="@drawable/profile_icon"
                android:layout_centerHorizontal="true"
                app:civ_border_color="#4A4A4A"
                android:layout_weight="0.5"
                android:layout_margin="15dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Dress Shirts"
                android:layout_gravity="left"
                android:paddingLeft="5dp"
                android:fontFamily="@font/segoe_ui"
                android:textColor="@color/textGrey"
                android:textSize="22sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/product_name_textview"
                android:text="Customer Offered"
                android:textSize="22sp"
                android:fontFamily="@font/segoe_ui_bold"
                android:padding="5dp"
                android:textColor="@color/textBlue"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PKR"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textColor="@color/textBlue"
                    android:textSize="22sp"
                    />
                <TextView
                    android:id="@+id/offered_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:text="5000"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textColor="@color/textGreen"
                    android:textSize="22sp"
                    />
                <TextView
                    android:id="@+id/product_orignal_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(6000)"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textColor="@color/textGreen"
                    android:textSize="22sp"
                    />

            </LinearLayout>


                <TextView
                    android:id="@+id/product_offer_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Hello, i really want this product"
                    android:layout_gravity="center"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textColor="@color/textGrey"
                    android:textSize="16sp"
                    />

        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>