<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".VendorShop">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/store_banner_imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/store_image"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/name"
                android:layout_below="@+id/store_banner_imageView"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HP Store"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/textGrey"
                android:textSize="20sp"
                android:fontFamily="@font/segoe_ui_bold"
                />

            <LinearLayout
                android:id="@+id/products_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:background="#F3F3F3"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/products_textview"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop Inventory"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#707070"
                    android:textSize="26sp"
                    android:fontFamily="@font/segoe_ui_bold"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/vendor_inventory_RecyclerView"
                    android:orientation="vertical"
                    android:layout_margin="12dp"
                    android:layout_below="@+id/products_textview"
                    android:paddingBottom="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/vendor_inventory_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:text="Add" />

</RelativeLayout>