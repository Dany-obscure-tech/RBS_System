<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vendor_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/vendor_nav_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/vendor_navigation_header"
        android:id="@+id/nv">

    </com.google.android.material.navigation.NavigationView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/store_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/store_image"
                android:scaleType="fitXY"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_below="@+id/store_banner"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                app:civ_border_width="0dp"
                android:src="@drawable/profile_icon"
                android:layout_centerHorizontal="true"
                app:civ_border_color="#4A4A4A"
                android:layout_weight="0.5"
                />

            <TextView
                android:id="@+id/name"
                android:layout_below="@+id/profileImage"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HP Store"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/textGrey"
                android:textSize="20sp"
                android:fontFamily="@font/segoe_ui_bold"
                />

            <LinearLayout
                android:id="@+id/products_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:background="#F3F3F3"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/invetory_textview"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inventory"
                    android:textColor="#707070"
                    android:textSize="26sp"
                    android:fontFamily="@font/segoe_ui_bold"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/vendor_inventory_items"
                    android:layout_margin="12dp"
                    android:layout_below="@+id/invetory_textview"
                    android:paddingBottom="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>




        </RelativeLayout>


    </ScrollView>


</androidx.drawerlayout.widget.DrawerLayout>