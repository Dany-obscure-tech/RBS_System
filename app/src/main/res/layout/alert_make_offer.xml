<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/title"
        style="@style/RBSInvoice_TextViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Send Offer"
        android:textColor="@color/gradientDarkBlue"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/midLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:orientation="vertical">

        <TextView
            style="@style/RBSInvoice_TextViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Enter Amount" />

        <EditText
            android:id="@+id/alertMakeOfferAmount_editText"
            style="@style/RBSInvoice_EditTexts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:inputType="number"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/midLayout"
        android:orientation="vertical">

        <TextView
            style="@style/RBSInvoice_TextViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Enter Message" />

        <EditText
            android:id="@+id/alertMakeOfferMessage_editText"
            style="@style/RBSInvoice_EditTexts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondLayout"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alertMakeOfferSubmit_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buylocal_main_button"
            android:fontFamily="@font/segoe_ui_bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Send offer"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/alertMakeOfferCancel_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/grey_border"
            android:fontFamily="@font/segoe_ui_bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="@color/textGrey"
            android:textSize="14sp" />

    </LinearLayout>


</RelativeLayout>