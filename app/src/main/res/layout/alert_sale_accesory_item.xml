<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="Sale Accessory"
        android:textSize="20sp" />


    <LinearLayout
        android:id="@+id/midLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Category"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/select_category_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/main_button"
                android:fontFamily="@font/segoe_ui"
                android:gravity="center"
                android:padding="13dp"
                android:text="SELECT CATEGORY"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Item Name"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/select_itemname_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/main_button"
                android:fontFamily="@font/segoe_ui"
                android:gravity="center"
                android:padding="13dp"
                android:text="SELECT ITEM NAME"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Quantity"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/alertAccessoryQuantity_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6E76E3"
            android:fontFamily="@font/segoe_ui"
            android:hint="Enter quantity"
            android:inputType="number"
            android:text="1"
            android:textColor="#9F9F9F"
            android:textColorHint="#9F9F9F"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Unit Price"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/alertAccessoryUnitPrice_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6E76E3"
            android:fontFamily="@font/segoe_ui"
            android:hint="Enter unit price"
            android:inputType="numberDecimal"
            android:text=""
            android:textColor="#9F9F9F"
            android:textColorHint="#9F9F9F"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Total Price"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/alertAccessoryTotalPrice_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="NA"
            android:textColor="@color/textBlue"
            android:textSize="18sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/midLayout"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alertAddAccessoryEnter_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/main_button"
            android:fontFamily="@font/segoe_ui"
            android:text="Enter"
            android:textColor="@color/textBlue"
            android:textSize="15sp" />

        <Button
            android:id="@+id/alertSaleAccessoryCancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/main_button_grey"
            android:fontFamily="@font/segoe_ui"
            android:text="Cancel"
            android:textColor="@color/textGrey"
            android:textSize="15sp" />

    </LinearLayout>


</RelativeLayout>