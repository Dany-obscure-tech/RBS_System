<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:textColor="@color/gradientDarkBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Report Item"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/midLayout"
        android:layout_below="@+id/title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Report description"/>

        <EditText
            android:id="@+id/alertReportDescription_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/segoe_ui"
            android:textColor="@color/textGrey"
            android:textColorHint="#9F9F9F"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/midLayout"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/alertReportSubmit_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buylocal_main_button"
            android:fontFamily="@font/segoe_ui_bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Report"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/alertReportCancel_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/grey_border"
            android:fontFamily="@font/segoe_ui_bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="@color/textGrey"
            android:textSize="14sp" />

    </LinearLayout>


</RelativeLayout>