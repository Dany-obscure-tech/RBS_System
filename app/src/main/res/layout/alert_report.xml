<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:background="#55000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="Report Item"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/midLayout"
        android:layout_below="@+id/title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Report description"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/alertReportDescription_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6E76E3"
            android:fontFamily="@font/segoe_ui"
            android:textColor="#ffffff"
            android:textColorHint="#9F9F9F"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/midLayout"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/alertReportSubmit_btn"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:textColor = "#ffffff"
            android:background="@drawable/buylocal_main_button"
            android:fontFamily="@font/segoe_ui_bold"
            android:textSize="15sp"
            android:text="Report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/alertReportCancel_btn"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/segoe_ui"
            android:textColor = "@color/textGrey"
            android:background="@drawable/main_button_grey"
            android:textSize="15sp"
            android:text="Cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>