<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    tools:context=".Repairs">

    <RelativeLayout
        android:background="#0075B5"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/Back_btn"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/back_btn" />

        <TextView
            android:textColor="#ffffffff"
            android:textSize="24sp"
            android:fontFamily="@font/kameron_bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REPAIRS"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/searchForItem_textView"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#0075B5"
                    android:background="@drawable/main_button"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="15sp"
                    android:padding="13dp"
                    android:text="SEARCH FOR ITEM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/item_add_btn"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="3"
                    android:textColor = "@color/textBlue"
                    android:background="@drawable/main_button"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="15sp"
                    android:text="Add"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/itemDetails"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Category"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/category_textView"
                        android:text="Category"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Condition"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/condition_textView"
                        android:text="Condition"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Notes"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/notes_textView"
                        android:text="asoidhjas das;djasdd asd;ojkasd a;sdljasd as;sdkjasd  as;djas dpo;oajssdd  asd;pjasd  as;lkdkjjasd ;ojasd"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Last Active"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/last_active_textView"
                        android:text="Last active time"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/searchForCustomer_textView"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#0075B5"
                    android:background="@drawable/main_button"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="15sp"
                    android:padding="13dp"
                    android:text="SEARCH FOR CUSTOMER"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/customer_add_btn"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="3"
                    android:textColor = "@color/textBlue"
                    android:background="@drawable/main_button"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="15sp"
                    android:text="Add"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/customerDetails"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Phone no"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/phno_textView"
                        android:text="Category"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="DOB"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/dob_textView"
                        android:text="Condition"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Address"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/address_textView"
                        android:text="asoidhjas das;djasdd asd;ojkasd a;sdljasd as;sdkjasd  as;djas dpo;oajssdd  asd;pjasd  as;lkdkjjasd ;ojasd"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Email"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/email_textView"
                        android:text="asoidhjas das;djasdd asd;ojkasd a;sdljasd as;sdkjasd  as;djas dpo;oajssdd  asd;pjasd  as;lkdkjjasd ;ojasd"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/toggling_linear"
                android:visibility="visible"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Ticket Number"
                android:textSize="16sp" />

                <TextView
                    android:id="@+id/ticketNo_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:text="NA"
                    android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Listed Faults with price"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/addFaults_btn"
                    android:elevation="5dp"
                    android:layout_weight="1"
                    android:textColor="#0075B5"
                    android:background="@drawable/main_button"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="15sp"
                    android:text="Add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:id="@+id/faultList_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Agreed Price"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/agreed_price_editText"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#6E76E3"
                android:fontFamily="@font/segoe_ui"
                android:hint="Enter agreed price"
                android:maxLength="32"
                android:textColor="#9F9F9F"
                android:textColorHint="#9F9F9F"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pendingAgreed_price_textView"
                android:visibility="gone"
                android:textColor="@color/textBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Pending Agreed Price"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/pendingAgreed_price_editText"
                android:visibility="gone"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#6E76E3"
                android:fontFamily="@font/segoe_ui"
                android:hint="Enter pending agreed price"
                android:maxLength="32"
                android:textColor="#9F9F9F"
                android:textColorHint="#9F9F9F"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Date"
                android:textSize="16sp" />

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/date_textView"
                    android:layout_weight="1.9"
                    android:textColor="#9F9F9F"
                    android:fontFamily="@font/segoe_ui"
                    android:backgroundTint="#6E76E3"
                    android:textSize="16sp"
                    android:text="Select date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:textSize="15sp"
                    android:id="@+id/date_btn"
                    android:textColor = "@color/textBlue"
                    android:background="@drawable/main_button"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:text="Date"
                    android:layout_weight="0.1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Paid Amount"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/paidAmount_editText"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#6E76E3"
                android:fontFamily="@font/segoe_ui"
                android:hint="Enter paid amount"
                android:maxLength="32"
                android:textColor="#9F9F9F"
                android:textColorHint="#9F9F9F"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Balance Amount"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/balanceAmount_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="NA"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Special Condition"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/special_condition_editText"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#6E76E3"
                android:fontFamily="@font/segoe_ui"
                android:hint="Enter special conditions"
                android:textColor="#9F9F9F"
                android:textColorHint="#9F9F9F"
                android:textSize="16sp" />

            <Button
                android:id="@+id/submit_btn"
                android:elevation="10dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/segoe_ui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="15sp"
                android:textColor="#0075B5"
                android:background="@drawable/main_button"
                android:layout_marginBottom="15dp"

                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/changesConfirmation_linearLayout"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/confirmChanges_textView"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/textBlue"
                    android:background="@drawable/main_button"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="15sp"
                    android:padding="13dp"
                    android:layout_marginRight="5dp"
                    android:text="AGREE CHANGES"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"/>


                <TextView
                    android:id="@+id/cancleChanges_textView"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/textGrey"
                    android:background="@drawable/main_button_grey"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:padding="13dp"
                    android:text="CANCLE CHANGES"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>