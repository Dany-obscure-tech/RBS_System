<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyLocal_shopkeeper_shop">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/store_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/store_image"
                android:scaleType="fitXY"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_below="@+id/store_banner"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                app:civ_border_width="0dp"
                android:src="@drawable/profile_icon"
                android:layout_centerHorizontal="true"
                app:civ_border_color="#4A4A4A"
                android:layout_weight="0.5"
                />

            <TextView
                android:id="@+id/name"
                android:layout_below="@+id/profileImage"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HP Store"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/textGrey"
                android:textSize="20sp"
                android:fontFamily="@font/segoe_ui_bold"
                />

            <LinearLayout
                android:id="@+id/products_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:background="#F3F3F3"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/products_textview"
                        android:layout_margin="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Products"
                        android:textColor="#707070"
                        android:textSize="26sp"
                        android:fontFamily="@font/segoe_ui_bold"
                        />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/your_products_RecyclerView"
                    android:layout_margin="12dp"
                    android:layout_below="@+id/products_textview"
                    android:paddingBottom="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </RelativeLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:src="@drawable/top_black_rectangle" />

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/back_arrow" />

        <ImageView
            android:id="@+id/menu_btn"
            android:padding="12dp"
            android:layout_weight="1.5"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_btn_white"
            android:adjustViewBounds="true"
            android:scaleType="center"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/side_option_menu"
        android:layout_width="wrap_content"
        android:background="#FFFF"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_below="@+id/action_bar"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/offers_option"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offers"
            android:textColor="@color/textGrey"
            android:textSize="16sp"
            android:fontFamily="@font/segoe_ui_bold"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/communication_option"
            android:layout_below="@+id/offers_option"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Communication"
            android:textColor="@color/textGrey"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:fontFamily="@font/segoe_ui_bold"
            />

    </RelativeLayout>


</RelativeLayout>