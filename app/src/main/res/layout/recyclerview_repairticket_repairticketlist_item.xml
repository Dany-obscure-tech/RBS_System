<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/outline_blue_circle"
            android:gravity="center_vertical"
            android:text=""
            android:layout_margin="10dp"
            android:textColor="@color/textBlue"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/leftLayout"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ticketNo_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RBSInvoice_TextViews"
                android:layout_marginTop="10dp"
                android:textColor="@color/gradientDarkBlue"
                android:text="Ticket No"/>

            <TextView
                android:id="@+id/customerName_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RBSInvoice_TextViews"
                android:fontFamily="@font/segoe_ui"
                android:text="Customer name"/>

            <TextView
                android:id="@+id/customerID_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RBSInvoice_TextViews"
                android:fontFamily="@font/segoe_ui"
                android:text="Customer ID"/>

            <TextView
                android:id="@+id/item_category_textView"
                style="@style/RBSInvoice_TextViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui"
                android:text="Item name"/>

            <TextView
                android:id="@+id/item_serialNo_textView"
                style="@style/RBSInvoice_TextViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui"
                android:text="Item serial no"/>

            <TextView
                android:id="@+id/date_textView"
                style="@style/RBSInvoice_TextViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui"
                android:text="Date"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>