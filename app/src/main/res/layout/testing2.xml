<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".Repairs">

    <androidx.cardview.widget.CardView
        android:id="@+id/searchForCustomer_cardView"
        style="@style/CardView_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                style="@style/Image_views"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/laptop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/image">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:text="Dress Shirts"
                    android:textColor="@color/gradientDarkBlue"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_name"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/segoe_ui"
                    android:text="Category"
                    android:textAlignment="center"
                    android:textColor="@color/textGreen"
                    android:textSize="18sp" />


                <LinearLayout
                    android:id="@+id/customerID_linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:id="@+id/currency_textView"
                        style="@style/RBSInvoice_TextViews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="PKR"
                        android:textAlignment="center"
                        android:textColor="@color/textGreen"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:text="5000"
                        android:textAlignment="center"
                        android:textColor="@color/textGreen"
                        android:textSize="22sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quantity_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/customerID_linearLayout"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/product_offer_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:text="Offers"
                        android:textAlignment="center"
                        android:textColor="@color/textGrey"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/product_no_of_offers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:paddingLeft="15dp"
                        android:text="1"
                        android:layout_marginRight="70dp"
                        android:textAlignment="center"
                        android:textColor="@color/gradientDarkBlue"
                        android:textSize="35sp" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>