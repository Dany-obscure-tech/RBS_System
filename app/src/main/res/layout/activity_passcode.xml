<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_screen_header"
    tools:context=".PasscodeActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/title_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Unlock with your pin code"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

        <LinearLayout
            android:id="@+id/passcode_pin_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_activity"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pincode_circle_1_imageview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pincode_circle" />

            <ImageView
                android:id="@+id/pincode_circle_2_imageview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/pincode_circle" />

            <ImageView
                android:id="@+id/pincode_circle_3_imageview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/pincode_circle" />

            <ImageView
                android:id="@+id/pincode_circle_4_imageview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pincode_circle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passcode_pin_linearlayout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_1_button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/passcode_circle_background"
                    android:gravity="center"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp" />


                <Button
                    android:id="@+id/btn_2_button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/passcode_circle_background"
                    android:gravity="center"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_3_button"

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/passcode_circle_background"
                    android:gravity="center"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_4_button"

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/passcode_circle_background"
                    android:gravity="center"
                    android:text="4"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp" />


                <Button
                    android:id="@+id/btn_5_button"

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/passcode_circle_background"
                    android:gravity="center"
                    android:text="5"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_6_button"

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/passcode_circle_background"
                    android:gravity="center"
                    android:text="6"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"

                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_7_button"

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/passcode_circle_background"
                    android:gravity="center"
                    android:text="7"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp" />


                <Button
                    android:id="@+id/btn_8_button"

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/passcode_circle_background"
                    android:gravity="center"
                    android:text="8"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_9_button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/passcode_circle_background"
                    android:gravity="center"
                    android:text="9"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/zero_linearlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/clear_imagebutton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/passcode_circle_background_delete"
                    android:src="@drawable/passcode_clear_btn" />

                <Button
                    android:id="@+id/btn_0_button"

                    android:layout_width="82dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/passcode_circle_background"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp" />

                <ImageButton
                    android:id="@+id/submit_imagebutton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/passcode_circle_background_submit"
                    android:src="@drawable/passcode_check_btn" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>