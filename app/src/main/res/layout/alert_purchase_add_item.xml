<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="Add Item"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_below="@+id/title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Item Name"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/alertItemName_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6E76E3"
            android:fontFamily="@font/segoe_ui"
            android:hint="Enter item name"
            android:maxLength="32"
            android:textColor="#9F9F9F"
            android:textColorHint="#9F9F9F"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/purchaseAlertCategory_btn"
                android:layout_weight="1"
                android:maxLines="2"
                android:textColor = "@color/textBlue"
                android:background="@drawable/main_button"
                android:fontFamily="@font/segoe_ui"
                android:textSize="15sp"
                android:text="Select Category"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"/>

            <Button
                android:id="@+id/purchaseAlertCategoryAdd_btn"
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:textColor = "@color/textBlue"
                android:background="@drawable/main_button"
                android:fontFamily="@font/segoe_ui"
                android:textSize="15sp"
                android:text="Add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Price Unit (Rate)"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/priceUnit_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6E76E3"
            android:fontFamily="@font/segoe_ui"
            android:hint="Enter price per unit"
            android:maxLength="32"
            android:textColor="#9F9F9F"
            android:textColorHint="#9F9F9F"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Quantity"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/quantity_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6E76E3"
            android:fontFamily="@font/segoe_ui"
            android:hint="Enter quantity"
            android:maxLength="32"
            android:textColor="#9F9F9F"
            android:textColorHint="#9F9F9F"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/purchaseAlertenter_btn"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:textColor = "@color/textBlue"
            android:background="@drawable/main_button"
            android:fontFamily="@font/segoe_ui"
            android:textSize="15sp"
            android:text="Enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/purchaseAlertCancel_btn"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textColor = "@color/textGrey"
            android:background="@drawable/main_button_grey"
            android:fontFamily="@font/segoe_ui"
            android:textSize="15sp"
            android:text="Cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>