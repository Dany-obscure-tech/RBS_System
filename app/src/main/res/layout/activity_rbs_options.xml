<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rbs_options">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/mainBanner_imageView"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                tools:context=".MainActivity">


                <LinearLayout
                    android:id="@+id/text"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kameron_bold"
                        android:text="RBS"
                        android:textColor="#707070"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kameron_bold"
                        android:text="POS"
                        android:textColor="#2EA4CF"
                        android:textSize="35sp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_below="@+id/text"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:id="@+id/repair"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ripple_effect_cardview"
                            app:cardBackgroundColor="#F1F1F1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="30dp">

                                <ImageButton
                                    android:id="@+id/icon1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:background="#00000000"
                                    android:src="@drawable/repair" />

                                <TextView
                                    android:textColor="#2EA4CF"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/icon1"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:text="Repair"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:id="@+id/BUY"
                            android:background="@drawable/main_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="44dp"
                            android:layout_marginLeft="44dp"
                            app:cardBackgroundColor="#F1F1F1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="30dp">

                                <ImageButton
                                    android:id="@+id/icon2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:background="#00000000"
                                    android:src="@drawable/buy" />

                                <TextView
                                    android:textColor="#2EA4CF"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/icon2"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:text="Buy"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>



                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/Sale"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:background="@drawable/main_button"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#F1F1F1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="30dp">

                                <ImageButton
                                    android:id="@+id/icon3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:background="#00000000"
                                    android:src="@drawable/sale" />

                                <TextView
                                    android:textColor="#2EA4CF"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/icon3"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:text="Sale"
                                    android:textSize="13.5sp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:id="@+id/Accessories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="44dp"
                            android:layout_marginLeft="44dp"
                            app:cardBackgroundColor="#F1F1F1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            android:background="@drawable/main_button"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="30dp">

                                <ImageButton
                                    android:id="@+id/icon4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:background="#00000000"
                                    android:src="@drawable/accessories" />

                                <TextView
                                    android:textColor="#2EA4CF"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/icon4"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:text="Accessories"
                                    android:textSize="13.5sp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>



                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/buy_local"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:background="@drawable/main_button"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#F1F1F1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="30dp">

                                <ImageButton
                                    android:id="@+id/icon8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:background="#00000000"
                                    android:src="@drawable/sale" />

                                <TextView
                                    android:textColor="#2EA4CF"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/icon8"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:text="Buy Local"
                                    android:textSize="13.5sp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="44dp"
                            android:layout_marginLeft="44dp"
                            app:cardBackgroundColor="#F1F1F1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            android:background="@drawable/main_button"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="30dp">

                                <ImageButton
                                    android:id="@+id/icon9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:background="#00000000"
                                    android:src="@drawable/accessories" />

                                <TextView
                                    android:textColor="#2EA4CF"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/icon9"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:text="Smart Share"
                                    android:textSize="13.5sp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>



                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <androidx.cardview.widget.CardView
                            android:visibility="gone"
                            android:id="@+id/Exchange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/main_button"
                            app:cardBackgroundColor="#F1F1F1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="30dp">

                                <ImageButton
                                    android:id="@+id/icon5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:background="#00000000"
                                    android:src="@drawable/exchange" />

                                <TextView
                                    android:textColor="#2EA4CF"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/icon5"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:text="Exchange"
                                    android:textSize="13.5sp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:visibility="gone"
                            android:id="@+id/Settings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#F1F1F1"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            android:background="@drawable/main_button"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="30dp">

                                <ImageButton
                                    android:id="@+id/icon6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:background="#00000000"
                                    android:src="@drawable/setting" />

                                <TextView
                                    android:textColor="#2EA4CF"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/icon6"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:text="Settings"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout
                    >

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>