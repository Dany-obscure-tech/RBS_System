<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyLocal_productdetails">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageSlider"
            app:cardCornerRadius="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSliders"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="true" />

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageSlider"
            android:layout_margin="20dp"
            >

            <TextView
                android:id="@+id/product_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui_bold"
                android:textColor="@color/textBlue"
                android:textSize="26sp"
                android:text="Hp omen Laptop"
                />
            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/product_name_textview"
                android:text="Laptop"
                android:textSize="18sp"
                android:fontFamily="@font/segoe_ui_bold"
                android:background="@drawable/text_background"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textAlignment="center"
                android:padding="5dp"
                android:textColor="@color/textGreen"
                />

            <TextView
                android:id="@+id/report_btn"
                android:layout_below="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/report_background"
                android:text="Report"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/segoe_ui_bold"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/item_description_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui"
                android:layout_below="@+id/report_btn"
                android:textColor="@color/textGrey"
                android:textSize="22sp"
                android:text="this is the First line of the text,second line of the text,third line of the description"
                />
            <LinearLayout
                android:id="@+id/price_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_below="@+id/item_description_textview">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:layout_below="@+id/report_btn"
                    android:textColor="@color/textGreen"
                    android:textSize="30sp"
                    android:text="PKR"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:layout_below="@+id/report_btn"
                    android:textColor="@color/textGreen"
                    android:textSize="30sp"
                    android:text="1000"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_options"
                android:layout_below="@+id/price_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/share_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:layout_below="@+id/price_textview"
                    android:textColor="#707070"
                    android:textSize="26sp"
                    android:text="Share now"
                    android:layout_marginTop="10dp"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/whatsapp"
                    android:background="#ffffffff"

                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/facebook"
                    android:background="#ffffffff"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/distance_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_options"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textColor="@color/textBlue"
                    android:textSize="26sp"
                    android:text="5 Miles"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textColor="@color/textGrey"
                    android:textSize="26sp"
                    android:text="away from you"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/shop_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_below="@+id/distance_textview">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    app:civ_border_width="0dp"
                    android:src="@drawable/profile_icon"
                    app:civ_border_color="#4A4A4A"
                    android:layout_weight="0.5"

                    />
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HP Store"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:textColor="@color/textGrey"
                        android:textSize="20sp"
                        android:fontFamily="@font/segoe_ui_bold"
                        />

<!--                    <LinearLayout-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content">-->

<!--                        <RatingBar-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:numStars="5"-->
<!--                            android:stepSize="1"-->
<!--                            android:theme="@style/RatingBar"-->
<!--                            style="?android:attr/ratingBarStyleIndicator"-->
<!--                            android:isIndicator="true"-->

<!--                            />-->

<!--                    </LinearLayout>-->

                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/point"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shop_status"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                >

                <Button
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/profile_screen_header"
                    android:textColor="#ffff"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:padding="15dp"
                    android:textSize="16sp"
                    android:text="Make Offer" />

                <Button
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/profile_screen_header"
                    android:textColor="#ffff"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:padding="15dp"
                    android:text="Communicate" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:src="@drawable/top_black_rectangle" />

    <ImageButton
        android:id="@+id/btn_menu"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/back_arrow" />

</RelativeLayout>




</RelativeLayout>