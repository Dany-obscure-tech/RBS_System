<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/screen_header_rectangle">

        <TextView
            style="@style/TextViews_Bold_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Edit Item Details"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/phone_no_textview"
            style="@style/TextViews_Bold_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Phone.no"
            android:textColor="@color/textGrey" />

        <EditText
            android:id="@+id/ac_phoneno"
            style="@style/TextViews_Regular_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_no_textview"
            android:backgroundTint="@color/colorPrimary"
            android:hint="Enter your phone number"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/textGrey" />

        <TextView
            android:id="@+id/address_textview"
            style="@style/TextViews_Bold_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ac_phoneno"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Address"
            android:textColor="@color/textGrey" />

        <EditText
            android:id="@+id/ac_address"
            style="@style/TextViews_Regular_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_textview"
            android:backgroundTint="@color/colorPrimary"
            android:hint="Enter your address"
            android:textColor="@color/textGrey" />

        <TextView
            android:id="@+id/email_textview"
            style="@style/TextViews_Bold_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ac_address"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Email"
            android:textColor="@color/textGrey" />

        <EditText
            android:id="@+id/ac_email"
            style="@style/TextViews_Regular_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_textview"
            android:backgroundTint="@color/colorPrimary"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:textColor="@color/textGrey" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ac_email"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/save_btn_textview"
                style="@style/RBSInvoice_SaveButtonTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Save"
                android:textAlignment="center" />


            <TextView
                android:id="@+id/cancel_btn_textview"
                style="@style/RBSInvoice_CancelButtonTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Cancel" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>