<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer_history">

    <RelativeLayout
        android:background="#0075B5"
        android:id="@+id/header"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/Back_btn"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/back_btn" />

        <TextView
            android:textColor="#ffffffff"
            android:textSize="24sp"
            android:fontFamily="@font/kameron_bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CUSTOMER HISTORY"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/customerDetails"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/header"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Customer Details"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/segoe_ui_bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Customer"
                android:fontFamily="@font/segoe_ui_bold"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/customerName_textView"
                android:text="Customer name"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/segoe_ui_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Cstomer ID"
                android:fontFamily="@font/segoe_ui_bold"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/customerID_textView"
                android:layout_gravity="center"
                android:text="---"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/segoe_ui_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Ph no"
                android:fontFamily="@font/segoe_ui_bold"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/phno_textView"
                android:text="-----"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/segoe_ui_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Address"
                android:fontFamily="@font/segoe_ui_bold"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/address_textView"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/segoe_ui_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Email"
                android:fontFamily="@font/segoe_ui_bold"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/email_textView"
                android:text="email"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/segoe_ui_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/customerDetailsToggle_textView"
        android:layout_below="@+id/customerDetails"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:text="Hide details"
        android:textColor="@color/textGrey"
        android:background="@drawable/main_button_grey"
        android:layout_gravity="right"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:fontFamily="@font/segoe_ui"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customerHistoryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/customerDetailsToggle_textView"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="42dp"
        android:layout_marginRight="8dp" />

</RelativeLayout>