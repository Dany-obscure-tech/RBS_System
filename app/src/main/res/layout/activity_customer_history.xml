<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer_history">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/profile_screen_header">

        <TextView
            style="@style/TextViews_Regular_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/Back_btn"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Customer Details"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/Back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/back_arrow" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/header_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage_imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            app:civ_border_color="#4A4A4A"
            app:civ_border_width="7dp"

            />

        <LinearLayout
            android:id="@+id/user_details_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customerName_textView"
                style="@style/TextViews_Bold_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="User Name"
                android:textColor="@color/textGrey" />

            <LinearLayout
                android:id="@+id/phone_no_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/phonecall"
                    android:tint="@color/textGrey" />

                <TextView
                    android:id="@+id/phno_textView"
                    style="@style/TextViews_Regular_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="03234235"
                    android:textColor="@color/textGrey" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_no_area"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/email"
                    android:tint="@color/textGrey" />

                <TextView
                    android:id="@+id/post_code_textView"
                    style="@style/TextViews_Regular_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="shahzaib.mehfooz"
                    android:textColor="@color/textGrey" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/location_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_area"
                android:layout_gravity="start"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/location"
                    android:tint="@color/textGrey" />

                <TextView
                    android:id="@+id/vendor_address_textView"
                    style="@style/TextViews_Regular_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Peshawar city"
                    android:textColor="@color/textGrey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/customer_id_icon"
                    android:tint="@color/textGrey" />

                <TextView
                    style="@style/TextViews_Regular_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Customer ID :"
                    android:textColor="@color/textGrey" />

                <TextView
                    android:id="@+id/customerID_textView"
                    style="@style/TextViews_Regular_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="---"
                    android:textColor="@color/textGrey" />

            </LinearLayout>


            <TextView
                android:id="@+id/edit_textview"
                style="@style/RBSInvoice_TextViews"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit"
                android:backgroundTint="@color/textGrey" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/customerDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">


    </LinearLayout>

    <TextView
        android:id="@+id/customerDetailsToggle_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViews_Regular_small"
        android:layout_below="@+id/header_profile"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:background="@drawable/profile_screen_header"
        android:fontFamily="@font/segoe_ui_bold"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="Hide Details"
        android:textAlignment="center"
        android:textColor="#ffff"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customerHistoryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerDetailsToggle_textView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp" />

</RelativeLayout>