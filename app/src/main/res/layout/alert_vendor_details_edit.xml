<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/screen_header_rectangle">

        <TextView
            style="@style/TextViews_Bold_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Edit Item Details"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header">

        <LinearLayout
            android:id="@+id/add_user_data_fields_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/TextViews_Bold_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Post Code"
                android:textColor="@color/textGrey" />

            <EditText
                android:id="@+id/edit_pastcode_editText"
                style="@style/TextViews_Regular_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_textview"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorPrimary"
                android:hint="Enter passcode"
                android:textColor="@color/textGrey" />


            <TextView
                style="@style/TextViews_Bold_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Address"
                android:textColor="@color/textGrey" />

            <EditText
                android:id="@+id/edit_address_editText"
                style="@style/TextViews_Regular_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_textview"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorPrimary"
                android:hint="Enter address"
                android:textColor="@color/textGrey" />

            <TextView
                style="@style/TextViews_Bold_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Phone number"

                android:textColor="@color/textGrey" />

            <EditText
                android:id="@+id/edit_phone_number_editText"
                style="@style/TextViews_Regular_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_textview"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorPrimary"
                android:hint="Enter phone number"
                android:inputType="number"
                android:textColor="@color/textGrey" />

            <TextView
                style="@style/TextViews_Bold_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mobile number"
                android:textColor="@color/textGrey" />

            <EditText
                android:id="@+id/edit_mobile_number_editText"
                style="@style/TextViews_Regular_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_textview"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorPrimary"
                android:hint="Enter mobile number"
                android:inputType="number"
                android:textColor="@color/textGrey" />

            <TextView
                style="@style/TextViews_Bold_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textColor="@color/textGrey" />

            <EditText
                android:id="@+id/edit_email_address_editText"
                style="@style/TextViews_Regular_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_textview"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorPrimary"
                android:hint="Enter email address"
                android:inputType="textEmailAddress"
                android:textColor="@color/textGrey" />

            <TextView
                style="@style/TextViews_Bold_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="URL"
                android:textColor="@color/textGrey" />

            <EditText
                android:id="@+id/edit_url_address_editText"
                style="@style/TextViews_Regular_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_textview"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorPrimary"
                android:hint="Enter website URL"
                android:inputType="textEmailAddress"
                android:textColor="@color/textGrey" />


            <TextView
                android:id="@+id/change_passcode_btn"
                style="@style/blue_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/profile_screen_header"
                android:text="Change Passcode" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/edit_vendor_details_save_btn"
                    style="@style/RBSInvoice_SaveButtonTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="Save"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/edit_vendor_details_cancel_btn"
                    style="@style/RBSInvoice_CancelButtonTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Cancel" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>