<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/shop_items_cardView"
        style="@style/CardView_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                style="@style/Search_views_Image_views"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/laptop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image">

                <LinearLayout
                    android:id="@+id/offers_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/product_offer_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        style="@style/TextViews_Regular_small"
                        android:text="Offers"
                        android:textColor="@color/textGrey" />

                    <TextView
                        android:id="@+id/product_no_of_offers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextViews_Bold_big"
                        android:paddingLeft="15dp"
                        android:text="1"
                        android:textSize="20sp"
                        android:textColor="@color/gradientDarkBlue" />

                </LinearLayout>


                <TextView
                    android:id="@+id/product_name"
                    android:layout_below="@+id/offers_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextViews_Bold_small"
                    android:text="Dress Shirts"
                    android:textColor="@color/gradientDarkBlue"
                    android:textSize="22sp" />




                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_name"
                    style="@style/TextViews_Regular_small"
                    android:layout_marginTop="10dp"
                    android:text="Category"
                    android:textColor="@color/textGreen" />


                <LinearLayout
                    android:id="@+id/customerID_linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:id="@+id/currency_textView"
                        style="@style/TextViews_Regular_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PKR"
                        android:textColor="@color/textGreen"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextViews_Regular_big"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:text="5000"
                        android:textColor="@color/textGreen"
                        android:textSize="22sp" />


                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>