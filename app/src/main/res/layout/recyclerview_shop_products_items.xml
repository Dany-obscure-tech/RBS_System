<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:background="@drawable/color_cursor_white"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/image"
                android:src="@drawable/shirt"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="180dp"
                android:layout_height="180dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Dress Shirts"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/segoe_ui_bold"
                android:textColor="@color/textGrey"
                android:textSize="22sp"
                />
            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/product_name_textview"
                android:text="Category"
                android:textSize="18sp"
                android:fontFamily="@font/segoe_ui_bold"
                android:background="@drawable/red_border"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/textGreen"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currency_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PKR"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textColor="@color/textBlue"
                    android:textSize="22sp"
                    />
                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:text="5000"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textColor="@color/textGreen"
                    android:textSize="22sp"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >


                <TextView
                    android:id="@+id/product_offer_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OFFERS"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textColor="@color/textBlue"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/product_no_of_offers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textColor="@color/textBlue"
                    android:textSize="40sp"
                    />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>