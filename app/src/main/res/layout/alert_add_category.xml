<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="Add Category"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/midLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Category Name"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/alertAddCategoryName_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6E76E3"
            android:fontFamily="@font/segoe_ui"
            android:hint="Enter category name"
            android:maxLength="32"
            android:textColor="#9F9F9F"
            android:textColorHint="#9F9F9F"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/midLayout"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alertAddCategoryEnter_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/main_button"
            android:fontFamily="@font/segoe_ui"
            android:text="Enter"
            android:textColor="@color/textBlue"
            android:textSize="15sp" />

        <Button
            android:id="@+id/alertAddCategoryCancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/main_button_grey"
            android:fontFamily="@font/segoe_ui"
            android:text="Cancel"
            android:textColor="@color/textGrey"
            android:textSize="15sp" />

    </LinearLayout>


</RelativeLayout>