<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">80dp</item>

    </style>

    <style name="AppTheme.no">
        <item name="android:textColor">@color/defaultText</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/yellowStars</item>
        <item name="colorControlActivated">@color/greyStars</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RBSInvoice_TextViews">
        <item name="android:textColor">@color/defaultText</item>
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RBSInvoice_TextViews_small">
        <item name="android:textColor">@color/defaultText</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViews_header">
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:textSize">@dimen/Bold_Big</item>

    </style>


    <style name="gradient_blue_btn">
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffff</item>

    </style>


    <style name="green_btn">
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:background">@drawable/buylocal_green_button</item>

    </style>

    <style name="TextViews_Regular_small">
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:textSize">@dimen/Regular_Small</item>

    </style>

    <style name="TextViews_Regular_big">
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:textSize">@dimen/Regular_Big</item>

    </style>

    <style name="TextViews_Bold_big">
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:textSize">@dimen/Bold_Big</item>

    </style>

    <style name="TextViews_Bold_small">
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:textSize">@dimen/Bold_Small</item>

    </style>

    <style name="RBSInvoice_TextViews_Values">
        <item name="android:textColor">@color/gradientDarkBlue</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Headings_TextViews">
        <item name="android:textColor">@color/defaultText</item>
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Search_views_Image_views">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="CardView_style">
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">10dp</item>

    </style>

    <style name="Titles">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Titles_item">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubTitles_item">
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SubTitles_item_values">
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RBSInvoice_EditTexts">
        <item name="android:textColorHint">@color/textGrey</item>
        <item name="android:textColor">@color/defaultText</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:textSize">@dimen/Regular_Big</item>
    </style>

    <style name="RBSInvoice_SaveButtonTextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/buylocal_green_button</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RBSInvoice_CancelButtonTextView">
        <item name="android:textColor">@color/textGrey</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/btn_grey</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


</resources>
